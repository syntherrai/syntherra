class TradeExecutor:
    def __init__(self, config):
        exchange_class = getattr(ccxt, config["exchange"].lower())
        self.exchange = exchange_class({
            "apiKey": config["api_key"],
            "secret": config["api_secret"]
        })
        self.pair = config["trading_pair"]

    def execute(self, signal, data):
        if signal == "BUY":
            # Place a market buy order
            self.exchange.create_market_buy_order(self.pair, amount=0.001)
        elif signal == "SELL":
            # Place a market sell order
            self.exchange.create_market_sell_order(self.pair, amount=0.001)
